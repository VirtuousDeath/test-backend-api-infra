{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2017",
            "es5",
            "es6",
            "es7",
            "esnext"
        ],
        "module": "commonjs",
        "outDir": "./built",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "removeComments": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "noEmit": false,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "test/**/*.spec.ts",
        "*.d.ts",
        "./built/**/*"
    ],
    "include": [
        "./**/*",
        "index.ts",
        "index.js",
        "index.ts"
    ]
}